# Next.js Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OpenRouter API Key (Required for AI provider)
OPENROUTER_API_KEY=sk-or-your-api-key-here

# Optional: OpenRouter Model (default: gpt-4o-mini)
OPENROUTER_MODEL=gpt-4o-mini

# Optional: Max tokens for responses (default: 1000)
OPENROUTER_MAX_TOKENS=1000

# Optional: Temperature for responses (default: 0.7)
# 0.0-0.3 for deterministic, 0.4-0.7 for balanced, 0.8-1.0 for creative
OPENROUTER_TEMPERATURE=0.7
